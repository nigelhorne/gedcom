<gedcom>
	<sentence1>
		<en>
			[% name %]
			[% IF aka %]
				(also known as [% aka %])
			[% END %]
			[% IF relationship %]
				[% IF aob || aod %]
					, your [% relationship %],
				[% ELSE %]
					[% IF is_alive %]
						is
					[% ELSE %]
						was
					[% END %]
					your [% relationship %]
				[% END %]
			[% ELSIF spouserelationship %]
				[% IF aob || aod %]
					, the
				[% ELSIF is_alive %]
					is
				[% ELSE %]
					was
				[% END %]
				[% IF sex == 'M' %]
					husband
				[% ELSE %]
					wife
				[% END %]
				of [% spousefullname %] (your [% spouserelationship %]),
			[% END %]
			[% IF aob %]
				was born [% aob %] years today
				[% IF addressofbirth %]
					in [% addressofbirth %]
				[% END %]
				[% IF aod %]
					TODO: born and died on the same day
				[% END %]
			[% ELSIF aod %]
				died [% aod %] years today
				[% IF addressofdeath %]
					in [% addressofdeath %]
				[% END %]
			[% END %]
		</en>
	</sentence1>
	<sentence2>
		<en>
			[% IF sentence1 %]
				[% pronoun %]
			[% ELSE %]
				[% name %]
			[% END %]
			[% IF father || mother %]
				[% IF is_alive %]
					is
				[% ELSE %]
					was
				[% END %]
				the
				[% IF siblingcount %]
					[% familymember %] of [% siblingcount + 1 %] children of
				[% END %]
				[% IF sex == 'M' %]
					son
				[% ELSE %]
					daughter
				[% END %]
				of
				[% IF father %]
					[% father %]
					[% IF father_occupation %]
						, a [% father_occupation %],
					[% END %]
					[% IF mother %]
						and [% mother %]
						[% IF mother_occupation %]
							, a [% mother_occupation %]
						[% END %]
					[% END %]
				[% ELSE %]
					[% mother %]
					[% IF mother_occupation %]
						, a [% mother_occupation %],
					[% END %]
				[% END %]
			[% END %]
		</en>
	</sentence2>
	<sentence3>
		<en>
			[% IF occupations %]
				[% IF twin %]
					The twin of [% twin %],
				[% END %]
				[% # exlusive or %]
				[% IF (sentence1 || sentence2) &amp;&amp; !(sentence1 &amp;&amp; sentence2) %]
					[% pronoun %]
				[% ELSE %]
					[% name %]
				[% END %]
				[% IF is_alive %]
					is a
				[% ELSE %]
					worked as a
				[% END %]
				[% occupations %]
				[% IF father_occupation &amp;&amp; father_occupation == occupations %]
					, the same as [% pronoun %] father
				[% ELSIF mother_occupation &amp;&amp; mother_occupation == occupations %]
					, the same as [% pronoun %] mother
				[% END %]
			[% ELSIF twin %]
				[% pronoun %] was the twin of [% twin %]
			[% END %]
		</en>
	</sentence3>
	<sentence4>
		<en>
			[% pronoun %]
			was born
			[% IF birth_town.en %]
				[% birth_town.en %]
			[% END %]
			[% IF dateofbirth %]
				[% dateofbirth %]
			[% END %]
		</en>
	</sentence4>
	<sentence5>
		<en>SENTENCE5</en>
	</sentence5>
	<sentence6>
		<en>
			[% IF orphaned %]
				[% pronoun %] was orphaned
				[% IF orphaned.deathofmother == orphaned.deathoffather %]
					when both of [% person.possessive.lower %] parents died in [% orphaned.deathofmother %] when [% pronoun.lower %] was [% orphaned.age %] years old
				[% ELSE %]
					at the age of [% orphaned.age %] following the death of [% person.possessive.lower %]
					[% IF orphaned.deathofmother > orphaned.deathoffather %]
						mother in [% orphaned.deathofmother %]
					[% ELSE %]
						father in [% orphaned.deathoffather %]
					[% END %]
				[% END %]
			[% END %]
		</en>
	</sentence6>
</gedcom>
