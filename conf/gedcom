<?xml version="1.0"?>
<gedcom>
	<sentence1>
		<en>
			[% name %]
			[% IF aka %]
				([% aka %])
			[% END %]
			[% IF relationship %]
				,
				[% IF aob || aod %]
					your [% relationship %],
				[% ELSE %]
					[% IF is_alive %]
						is
					[% ELSE %]
						was
					[% END %]
					your [% relationship %]
				[% END %]
			[% ELSIF spouserelationship %]
				, the
				[% IF sex == 'M' %]
					husband
				[% ELSE %]
					wife
				[% END %]
				of [% spousefullname %] (your [% spouserelationship %]),
			[% END %]
			[% IF aob %]
				was born [% aob %] years today
				[% IF addressofbirth %]
					in [% addressofbirth %]
				[% END %]
				[% IF aod %]
					TODO: born and died on the same day
				[% END %]
			[% ELSIF aod %]
				died [% aod %] years today
				[% IF addressofdeath %]
					in [% addressofdeath %]
				[% END %]
			[% END %]
		</en>
	</sentence1>
	<sentence2>
		<en>
			[% IF sentence1 %]
				[% pronoun %]
			[% ELSE %]
				[% name %]
			[% END %]
			[% IF father || mother %]
				[% IF is_alive %]
					is
				[% ELSE %]
					was
				[% END %]
				the
				[% IF sex == 'M' %]
					son
				[% ELSE %]
					daughter
				[% END %]
				of
			[% END %]
			[% IF father %]
				[% father %]
				[% IF father_occupation %]
					, a [% father_occupation %],
				[% END %]
				[% IF mother %]
					and [% mother %]
					[% IF mother_occupation %]
						, a [% mother_occupation %]
					[% END %]
				[% END %]
			[% ELSIF mother %]
				[% mother %]
				[% IF mother_occupation %]
					, a [% mother_occupation %],
				[% END %]
			[% END %]
		</en>
	</sentence2>
	<sentence3>
		<en>
			[% IF twin %]
				The twin of [% twin %],
			[% END %]
			[% IF occupations %]
				[% IF sentence1 &amp;&amp; !sentence2 %]
					[% pronoun %]
				[% ELSE %]
					[% name %]
				[% END %]
				[% IF is_alive %]
					is a
				[% ELSE %]
					worked as a
				[% END %]
				[% occupations %]
				[% IF father_occupation &amp;&amp; father_occupation == occupations %]
					, the same as [% pronoun %] father
				[% ELSIF mother_occupation &amp;&amp; mother_occupation == occupations %]
					, the same as [% pronoun %] mother
				[% END %]
			[% END %]
		</en>
	</sentence3>
</gedcom>
