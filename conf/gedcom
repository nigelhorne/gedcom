<?xml version="1.0"?>
<gedcom>
	<sentence1>
		<en>
			[% name %]
			[% IF aka %]
				(also known as [% aka %])
			[% END %]
			[% IF relationship %]
				[% IF aob || aod %]
					, your [% relationship %],
				[% ELSE %]
					[% IF is_alive %]
						is
					[% ELSE %]
						was
					[% END %]
					your [% relationship %]
				[% END %]
			[% ELSIF spouserelationship %]
				[% IF aob || aod %]
					, the
				[% ELSIF is_alive %]
					is
				[% ELSE %]
					was
				[% END %]
				[% IF sex == 'M' %]
					husband
				[% ELSE %]
					wife
				[% END %]
				of [% spousefullname %] (your [% spouserelationship %]),
			[% END %]
			[% IF aob %]
				was born [% aob %] years today
				[% IF addressofbirth %]
					[% addressofbirth.en %]
				[% END %]
				[% IF aod %]
					TODO: born and died on the same day
				[% END %]
			[% ELSIF aod %]
				died [% aod %] years today
				[% IF addressofdeath %]
					[% addressofdeath.en %]
				[% END %]
			[% END %]
		</en>
	</sentence1>
	<sentence2>
		<en>
			[% IF father || mother %]
				[% IF sentence1 %]
					[% pronoun %]
				[% ELSE %]
					[% name %]
				[% END %]
				[% IF is_alive %]
					is
				[% ELSE %]
					was
				[% END %]
				the
				[% IF siblingcount %]
					[% familymember %] of [% siblingcount + 1 %] children of
				[% END %]
				[% IF sex == 'M' %]
					son
				[% ELSE %]
					daughter
				[% END %]
				of
				[% IF father %]
					[% father %]
					[% IF father_occupation %]
						, a [% father_occupation %],
					[% END %]
					[% IF mother %]
						and [% mother %]
						[% IF mother_occupation %]
							, a [% mother_occupation %]
						[% END %]
					[% END %]
				[% ELSE %]
					[% mother %]
					[% IF mother_occupation %]
						, a [% mother_occupation %],
					[% END %]
				[% END %]
			[% END %]
		</en>
	</sentence2>
	<sentence3>
		<en>
			[% IF occupations %]
				[% IF twin %]
					The twin of [% twin %],
				[% END %]
				[% # exlusive or %]
				[% IF (sentence1 || sentence2) &amp;&amp; !(sentence1 &amp;&amp; sentence2) %]
					[% pronoun %]
				[% ELSE %]
					[% name %]
				[% END %]
				[% IF is_alive %]
					is a
				[% ELSE %]
					worked as a
				[% END %]
				[% occupations %]
				[% IF father_occupation &amp;&amp; father_occupation == occupations %]
					, the same as [% pronoun %] father
				[% ELSIF mother_occupation &amp;&amp; mother_occupation == occupations %]
					, the same as [% pronoun %] mother
				[% END %]
			[% ELSIF twin %]
				[% pronoun %] was the twin of [% twin %]
			[% END %]
		</en>
	</sentence3>
	<sentence4>
		<en>
			[% IF birth_town || dateofbirth %]
				[% pronoun %]
				was born
				[% IF birth_town.en %]
					[% birth_town.en %]
				[% END %]
				[% IF dateofbirth %]
					[% dateofbirth %]
				[% END %]
			[% END %]
		</en>
	</sentence4>
	<sentence5>
		<en>
			[% IF dateofbaptism || placeofbaptism || education %]
				[% pronoun %]
			[% ELSE %]
				[% name %]
			[% END %]
			[% IF dateofbaptism || placeofbaptism %]
				was baptized [% dateofbaptism %] [% placeofbaptism %]
				[% IF siblingbaptism %]
					TODO!!!!!!!!!! [% siblingbaptism %] in sentence5
				[% END %]
				[% IF education %]
					[% IF spouses %]
						,
					[% ELSE %]
						and
					[% END %]
				[% ELSIF spouses %]
					, and
				[% END %]
			[% END %]
			[% IF education %]
				went to [% education %]
				[% IF spouses %]
					and
				[% END %]
			[% END %]
			[% IF spouses %]
				married
				[% FOREACH spouse IN spouses %]
					[% spouse.name %]
					[% IF spouse.children %]
						[% IF spouse.dateofmarriage || spouse.placeofmarriage %]
							,
						[% END %]
						with whom [% pronoun.lower %] [% IF is_alive %] has [% END %] had
						[% IF spouse.children.size == 1 %]
							child: [% spouse.children.0 %]
						[% ELSE %]
							[% spouse.children.size %] children: (
							[%
								children = spouse.children;
								size = children.size;
								IF size == 2;
									children.join(' and ');
								ELSE;
									children.slice(0, size - 3).join(', ') _ ', ' _ children.-2 _ ' and ' _ children.-1;
								END;
							%]
							)
						[% END %]
						[% IF spouse.dateofmarriage || spouse.placeofmarriage %]
							,
						[% END %]
					[% END %]
					[% spouse.dateofmarriage %]
					[% IF spouse.placeofmarriage %]
						[% IF spouse.addressofmarriage %]
							at [% spouse.addressofmarriage %]
						[% ELSE %]
							in
						[% END %]
						[% spouse.placeofmarriage %]
					[% END %]
				[% END %]
			[% END %]
		</en>
	</sentence5>
	<sentence6>
		<en>
			[% IF orphaned %]
				[% pronoun %] was orphaned
				[% IF orphaned.deathofmother == orphaned.deathoffather %]
					when both of [% person.possessive.lower %] parents died in [% orphaned.deathofmother %] when [% pronoun.lower %] was [% orphaned.age %] years old
				[% ELSE %]
					at the age of [% orphaned.age %] following the death of [% person.possessive.lower %]
					[% IF orphaned.deathofmother > orphaned.deathoffather %]
						mother in [% orphaned.deathofmother %]
					[% ELSE %]
						father in [% orphaned.deathoffather %]
					[% END %]
				[% END %]
			[% END %]
		</en>
	</sentence6>
	<sentence7>
		<en>
			[% IF alllifein %]
				[% name %] spent all of [% person.possessive.lower %] life in [% alllifein %].
			[% END %]
			[% IF residences %]
				Throughout [% person.possessive.lower %] life,
				[% name %] [% IF is_alive %] has [% END %]
				lived in several places:
				[%
					size = residences.size;
					IF size == 2;
						residences.join(' and ');
					ELSE;
						residences.slice(0, size - 3).join('; ') _ '; ' _ residences.-2 _ ' and ' _ residences.-1;
					END;
				%]
			[% END %]
		</en>
	</sentence7>
	<sentence8>
		<en>
			[% IF military %]
				[% name %] served in the [% military.service %] [% military.date %] [% military.notes %]
			[% END %]
		</en>
	</sentence8>
	<sentence9>
		<en>
			[% IF cremation %]
				[% name %] was cremated [% cremation.place.en %] [% cremation.date %]
				[% IF cremation.weather %]
					([% cremation.weather %])
				[% END %]
			[% END %]
		</en>
	</sentence9>
</gedcom>
